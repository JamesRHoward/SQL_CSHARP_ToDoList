@{
  Layout="Shared/_Layout.cshtml";
}

<h3>New task in @Model.GetName()</h3>
<br>
<form action="/categories/@Model.GetId()" method="post">
  <input type="text" name="task-description" value="" class="form-control" placeholder="Desciption" required>
  <input type="hidden" name="category-id" value="@Model.GetId()">
  <br>
  <button class="btn btn-default btn-md" type="submit">Create Task</button>
</form>
<br>
