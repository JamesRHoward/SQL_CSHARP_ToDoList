@{
  Layout="Shared/_Layout.cshtml";
}

<h3>Categories</h3>
<br>
@if (Model.Count == 0)
{
  <p>There are no categories to display</p>
}
else
{
  <ul>
  @foreach(var category in Model)
  {
    <li><a href="/categories/@category.GetId()">@category.GetName()</a></li>
  }
  </ul>
}
<br>
<form action="/categories/new" method="get">
  <button class="btn btn-default btn-sm" type="submit">New Category</button>
</form>
<form action="/categories/clear" method="post">
  <button class="btn btn-default btn-sm" type="submit">Clear Categories</button>
</form>
<br>
